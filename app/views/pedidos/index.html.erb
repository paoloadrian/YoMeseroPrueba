<p id="notice"><%= notice %></p>

<h1>Listing pedidos</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Restaurant</th>
      <th>Estado</th>
      <th>Mesa</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @pedidos.each do |pedido| %>
      <tr>
        <td><%= pedido.consumo %></td>
        <td><%= pedido.restaurant_id %></td>
        <td><%= pedido.estado %></td>
        <td><%= pedido.mesa %></td>
        <td><%= link_to 'Show', pedido %></td>
        <td><%= link_to 'Edit', edit_pedido_path(pedido) %></td>
        <td><%= link_to 'Destroy', pedido, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

